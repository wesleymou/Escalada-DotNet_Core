@model Escalada.Models.Customer

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h1>Cliente</h1>

<div>
    <h4>Detalhes</h4>
    <hr />

    @if (Model.Excluido)
    {
        <div class="alert alert-danger">Este cliente foi excluído do sistema e está arquivado para consulta.</div>
    }

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumFone1)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumFone1)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumFone2)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumFone2)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    @if (!Model.Excluido)
    {
        <span><a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> | </span>
    }
    <a asp-action="Index">Retornar à lista</a>
</div>

@model Escalada.Models.Customer

@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<h1>Cliente</h1>
<h4>Cadastrar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group required">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control cpf"/>
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="NumFone1" class="control-label"></label>
                <input asp-for="NumFone1" class="form-control telefone"/>
                <span asp-validation-for="NumFone1" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="NumFone2" class="control-label"></label>
                <input asp-for="NumFone2" class="form-control telefone" />
                <span asp-validation-for="NumFone2" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@model Escalada.Models.ViewModels.EventEditViewModel

@{
    ViewData["Title"] = "Cadastrar Evento";
}

<h1>Evento</h1>
<h4>Cadastrar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Event" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Event.Nome" class="control-label"></label>
                <input asp-for="Event.Nome" class="form-control" />
                <span asp-validation-for="Event.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.DataInicio" class="control-label"></label>
                <input asp-for="Event.DataInicio" class="form-control" />
                <span asp-validation-for="Event.DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.DataTermino" class="control-label"></label>
                <input asp-for="Event.DataTermino" class="form-control" />
                <span asp-validation-for="Event.DataTermino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Local" class="control-label"></label>
                <input asp-for="Event.Local" class="form-control" />
                <span asp-validation-for="Event.Local" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Capacidade" class="control-label"></label>
                <input asp-for="Event.Capacidade" class="form-control" />
                <span asp-validation-for="Event.Capacidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Quorum" class="control-label"></label>
                <input asp-for="Event.Quorum" class="form-control" />
                <span asp-validation-for="Event.Quorum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.OrcamentoPrevio" class="control-label"></label>
                <input asp-for="Event.OrcamentoPrevio" class="form-control" />
                <span asp-validation-for="Event.OrcamentoPrevio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.ValorIngresso" class="control-label"></label>
                <input asp-for="Event.ValorIngresso" class="form-control" />
                <span asp-validation-for="Event.ValorIngresso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cronograma" class="control-label"></label>
                <input asp-for="Cronograma" class="form-control" />
                <span asp-validation-for="Cronograma" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Event.Status" class="control-label"></label>

                <select 
                    asp-for="Event.Status" 
                    asp-items="Html.GetEnumSelectList<EventStatus>()"
                    class="form-control"></select>

                <span asp-validation-for="Event.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar Ã  lista</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@model IEnumerable<Escalada.Models.Event>

    @{
    ViewData["Title"] = "Eventos";
    }

    <h1>Eventos</h1>

    <p>
        <a asp-action="Create">Cadastrar novo evento</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Local)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorIngresso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>
                    @if(item.Excluido)
                    {
                    <span class="badge badge-danger">Exclu√≠do</span>
                    }
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Local)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorIngresso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    @if(!item.Excluido)
                    {
                    <span> | <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> | </span>
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    }
                </td>
            </tr>
            }
        </tbody>
    </table>
@model Escalada.Models.ViewModels.EventViewModel

@{
ViewData["Title"] = "Editar";
}

<h1>Evento</h1>
<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-asp-controller="Event" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataTermino" class="control-label"></label>
                <input asp-for="DataTermino" class="form-control" />
                <span asp-validation-for="DataTermino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Local" class="control-label"></label>
                <input asp-for="Local" class="form-control" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacidade" class="control-label"></label>
                <input asp-for="Capacidade" class="form-control" />
                <span asp-validation-for="Capacidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quorum" class="control-label"></label>
                <input asp-for="Quorum" class="form-control" />
                <span asp-validation-for="Quorum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrcamentoPrevio" class="control-label"></label>
                <input asp-for="OrcamentoPrevio" class="form-control" />
                <span asp-validation-for="OrcamentoPrevio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorIngresso" class="control-label"></label>
                <input asp-for="ValorIngresso" class="form-control" />
                <span asp-validation-for="ValorIngresso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cronograma" class="control-label"></label>
                <input asp-for="Cronograma" class="form-control" />
                <span asp-validation-for="Cronograma" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="StatusId" asp-items="@Model.StatusList" class="form-control">
                    <option disabled selected hidden value=@Model.Status.Id>@Model.Status.Name</option>
                </select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar Ã  lista</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}